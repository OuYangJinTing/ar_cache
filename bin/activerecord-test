#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'
set -vx

if [ ! -d 'tmp/rails/' ]; then
  git clone --branch=6-1-ar_cache-test https://github.com/OuYangJinTing/rails.git tmp/rails && cd tmp/rails
else
  cd tmp/rails && git pull origin 6-1-ar_cache-test
fi

bundle install
cd activerecord
bundle exec rake test:sqlite3
